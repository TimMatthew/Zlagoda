        <Label layoutX="35.0" layoutY="32.0" text="Enter an amount:">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="input" layoutX="182.0" layoutY="27.0" prefHeight="35.0" prefWidth="82.0">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>
        <Button fx:id="confirmButton" layoutX="124.0" layoutY="142.0" mnemonicParsing="false" onAction="#confirmAddition" prefHeight="25.0" prefWidth="58.0" text="OK">
